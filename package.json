{
  "name": "vitepress-blog",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/anlyyao/vitepress-blog.git"
  },
  "author": {
    "name": "anlyyao",
    "email": "anly_yaw@163.com"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext js,.ts,.tsx ./ --max-warnings 0",
    "lint:fix": "eslint --ext js,.ts,.tsx ./ --max-warnings 0 --fix",
    "commit": "git-cz",
    "prepare": "husky install",
    "dev": "vitepress dev docs",
    "build": "vitepress build docs",
    "serve": "vitepress serve docs --port 8080",
    "register:components": "vitepress-rc",
    "deploy-gh": "npm run build && bash scripts/deploy-gh.sh",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2",
    "vitepress": "^1.0.0-alpha.1",
    "vitepress-theme-demoblock": "^1.4.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
